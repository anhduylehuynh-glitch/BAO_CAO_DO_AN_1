<div class="content">
    <form class="form_thisinh">
        <label>THÔNG TIN THÍ SINH</label>
        <table>
            <tr>
                <th>Họ và tên: </th>
                <th>
                    <input type="text" name="hoten" placeholder="Nhập họ và tên">
                </th>
            </tr>

            <tr>
                <th>Số CCCD: </th>
                <th>
                    <input type="text" name="cccd" placeholder="Nhập số căn cước công dân">
                </th>
            </tr>

            <tr>
                <th>Ngày sinh: </th>
                <th>
                    <input type="date" name="ngaysinh">
                </th>
            </tr>

            <tr>
                <th>Số điện thoại: </th>
                <th>
                    <input type="text" name="sdt" placeholder="Nhập số điện thoại">
                </th>
            </tr>

            <tr>
                <th>Email: </th>
                <th>
                    <input type="email" name="email" placeholder="Nhập địa chỉ email">
                </th>
            </tr>

            <tr>
                <th>Tỉnh/Thành phố: </th>
                <th>
                    <select name="tinh">
                        <option>Chọn tỉnh/thành phố</option>
                        <option>An Giang</option>
                        <option>Bắc Giang</option>
                        <option>Bắc Ninh</option>
